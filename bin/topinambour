# Topinambour is a terminal emulator written with the ruby gtk3 and
# vte 3 bindings.
# Author:: Cedlemo (mailto:cedlemo@gmx.com)

require "gtk3"
require "vte3"
require "fileutils"
require "sass"

CURRENT_PATH = File.expand_path(File.dirname(__FILE__))
LIB_PATH = "#{CURRENT_PATH}/../lib"
DATA_PATH = "#{CURRENT_PATH}/../data"
CONFIG_DIR = File.expand_path("#{ENV['HOME']}/.config/topinambour")
USR_CSS = "#{CONFIG_DIR}/topinambour.css"
USR_LIB_PATH  = "#{CONFIG_DIR}/lib"
gresource_bin = "#{DATA_PATH}/topinambour.gresource"

resource = Gio::Resource.load(gresource_bin)
Gio::Resources.register(resource)
# Load default libraries !!WARNING!! loading order matters

%w(actions style_properties css_handler application rgb_names_regexes terminal_regex terminal notebook color_selector font_selector
terminal_chooser shortcuts window css_editor preferences).each do |l|
  if File.exist?("#{USR_LIB_PATH}/#{l}.rb")
    require "#{USR_LIB_PATH}/#{l}.rb"
  else
    require "#{LIB_PATH}/#{l}.rb"
  end
end

Gtk::IconTheme.default.add_resource_path("/com/github/cedlemo/topinambour/icons")

topinambour = TopinambourApplication.new

exit(topinambour.run([$PROGRAM_NAME] + ARGV))
